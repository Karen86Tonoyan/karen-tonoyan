{
  "version": "2.0.0",
  "description": "ALFA_CORE Extensions Configuration",
  
  "modules": {
    "coding": {
      "enabled": true,
      "config": {
        "timeout": 30,
        "sandbox_enabled": true,
        "allow_file_ops": false
      }
    },
    "chat": {
      "enabled": true,
      "config": {
        "default_model": "balanced",
        "history_size": 50
      }
    },
    "vision": {
      "enabled": true,
      "config": {
        "model": "llava"
      }
    },
    "audio": {
      "enabled": true,
      "config": {
        "stt_engine": "whisper",
        "tts_engine": "piper"
      }
    },
    "video": {
      "enabled": false,
      "config": {}
    },
    "security": {
      "enabled": true,
      "config": {
        "cerber_mode": true,
        "log_all": true
      }
    },
    "web": {
      "enabled": true,
      "config": {
        "timeout": 30,
        "user_agent": "ALFA_CORE/2.0"
      }
    },
    "photos": {
      "enabled": true,
      "name": "ALFA Photos Vault",
      "priority": 5,
      "description": "Military-grade encrypted photo gallery with self-healing AI",
      "config": {
        "vault_path": "~/.alfa/photos_vault",
        "auto_rotation_days": 90,
        "ai_enabled": true,
        "thumb_size": 256,
        "encryption": "AES-256-GCM"
      },
      "capabilities": [
        "photo_encryption",
        "key_rotation",
        "thumbnail_generation",
        "duplicate_detection",
        "self_healing",
        "android_integration"
      ]
    }
  },
  
  "layers": {
    "creative": {
      "enabled": true,
      "modules": ["figma", "webflow"]
    },
    "knowledge": {
      "enabled": true,
      "modules": ["deepwiki", "microsoft-docs"]
    },
    "automation": {
      "enabled": true,
      "modules": ["apify", "markitdown"]
    },
    "dev": {
      "enabled": true,
      "modules": ["idl-vscode", "pylance"]
    }
  }
}
